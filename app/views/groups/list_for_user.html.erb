<p style="color: green"><%= notice %></p>

<h1>Groups</h1>

<%= paginate @groups, window: 2 %>

<%= search_form_for @q, remote: true do |f| %>
  <%= f.label :name_cont, 'Group Name' %>
  <%= f.search_field :name_cont %>

  
  <%= f.submit %>
<% end %>

<table id="group_list_table" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" role="grid" aria-describedby="list_group_table_info">
  <thead>
    <tr>
      <th>Group Name</th>
      
     
      <th>Privacy</th>
      <th>Created At</th>
      <th>Total Members</th>
  
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
        <% if group.privacy==1 || current_user.id == group.user_id %>
            <tr style="white-space: initial; overflow: auto">
            <td><%= group.name%></td>
            <td>
              <% if group.privacy==0 %>
                <%= "Private"%>
              <% else %>
                <%= "Public" %> 
              <% end %>
            </td>
            <td><%= group.created_at %></td>
            <td><%= group.members.count %></td>
    
            <td><%= link_to "Details", user_show_path(group) %></td>
        
        <%end%>
        
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to "New group", new_group_path %>
