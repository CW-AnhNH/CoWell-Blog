		<div class="navbar-nav">
			<a class="nav-item nav-link"><li><%= link_to "Home", root_path %></li></a>
			<a class="nav-item nav-link"><li><%= link_to "Group", groups_path %></li></a>			
			<a class="nav-item nav-link"><li><%= link_to "Users", users_path %></li></a>
		</div>

		<% if current_page?(root_path) %>
