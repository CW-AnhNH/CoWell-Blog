<!DOCTYPE html>
<html>
  <head>
    <title>CwBlog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>  <%# this loads Sprockets/Rails asset pipeline %>
    <%= javascript_importmap_tags %> <%#  this loads JS from importmaps %>
  </head>

  <nav class="navbar navbar-expand-md navbar-dark bg-primary">
    <%= link_to 'Dashboard', admin_dashboard_index_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

  <div class="collapse navbar-collapse" id="navbarColor01">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
      <li class="nav-item <%= active_class(root_path) %>">
      <%= link_to 'Home', root_path, class: 'nav-link' %>
    </li>
    <li class="nav-item <%= active_class(admin_groups_path) %>">
      <%= link_to 'View Groups', admin_groups_path, class: 'nav-link' %>
    </li>
    <% if user_signed_in? %>
    
      <li class="nav-item <%= active_class(admin_users_index_path) %>">
        <%= link_to 'Users', admin_users_index_path, class: 'nav-link' %>
      </li>
     
    <% end %>
  </ul>
  <ul class="navbar-nav">
    <% if user_signed_in? %>
      <li class="nav-item <%= active_class(edit_user_registration_path) %>">
        <%= link_to "Hi, #{current_user.email}", edit_user_registration_path, class: 'nav-link' %>
      </li>
      <li class="nav-item <%= active_class(destroy_user_session_path) %>">
        <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
      </li>
    <% else %>
      <li class="nav-item <%= active_class(new_user_session_path) %>">
        <%= link_to 'Sign In', new_user_session_path, class: 'nav-link' %>
      </li>
      <li class="nav-item <%= active_class(new_user_registration_path) %>">
        <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
      </li>
    <% end %>
  </ul>
  
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="text" placeholder="Search">
      <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
</nav>

  <body>
    <%= yield %>
  </body>
</html>
