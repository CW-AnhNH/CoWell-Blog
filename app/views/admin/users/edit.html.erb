<% content_for :page_title, "Edit User" %>
<%= form_with model:[:admin, @user],local:true do |f| %>

    <div class="form-group col-md-4 field">
    <%= f.label :email %><br />
    <%= f.email_field :email, :readonly => true, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

 <div class="form-group col-md-4 field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
  </div>

  <div class="form-group col-md-4 field">
    <%= f.label :birthday %><br />
    <%= f.datetime_select :birthday, autofocus: true, autocomplete: "birthday", class: "form-control" %>
  </div>

    <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
<%= link_to 'Back', admin_users_path %>