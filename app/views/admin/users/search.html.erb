<table class="table table-bordered border-primary">
     <thead>
        <tr>
        <th>Avatar</th>
        <th>Name</th>
        <th>Email</th>
        <th>Birthday</th>
        <th>Status</th>
        <th colspan="3">Actions</th>
       </tr>
     </thead>

     <tbody>
     <% @results.each do |user| %>
         <tr>
         <td>
         <% if user.avatar.present? %>
            <%= image_tag(user.avatar, width: 100) %>
            <% else %>
            <img alt="image" class="rounded-circle" src="/assets/images/default_user.jpg">
          <% end %>
        </td>
           <td><%= user.username %></td>
           <td><%= user.email %></td>
           <td><%= user.birthday %></td>
           <td><%= user.status %></td>
           <td><%= link_to 'Show', admin_user_path(user) %></td>
           <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
           <td><%= link_to "Destroy", admin_user_path(user), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
         </tr>
       <% end %>
      </tbody>
   </table>
   <%= link_to 'Back', admin_users_path %>