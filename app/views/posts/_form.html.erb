<%= form_with model: @post do |form| %>

    <div class="form-group col-md-4 field radio-inline">
      <%= form.label :title %><br>
      <%= form.text_field :title, :required => true%>
    </div>
  
    <div class="form-group col-md-4 field radio-inline">
      <%= form.label :content %><br>
      <%= form.text_area :content, :required => true %><br>
    </div>

    <div class="form-group col-md-4 field radio-inline">
  <%= form.radio_button :privacy, :public, :required => true %>
  <%= form.label :Public %>
</div>

<div class="form-group col-md-4 field radio-inline">
  <%= form.radio_button :privacy, :private , :required => true %>
  <%= form.label :Private %>
</div>

  
    <div>
      <%= form.submit %>
    </div>
<% end %>